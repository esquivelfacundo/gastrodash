# Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tu_base_de_datos
DB_USER=tu_usuario
DB_PASSWORD=tu_contraseña

# Servidor
PORT=3007
NODE_ENV=development

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=cambia_este_secret_en_produccion
JWT_REFRESH_SECRET=cambia_este_refresh_secret_en_produccion
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# OpenAI API
OPENAI_API_KEY=tu_api_key_de_openai
OPENAI_MODEL=gpt-4

# Meta WhatsApp API
META_PHONE_NUMBER_ID=tu_phone_number_id
META_ACCESS_TOKEN=tu_access_token
META_WEBHOOK_VERIFY_TOKEN=tu_webhook_verify_token
META_BUSINESS_ACCOUNT_ID=tu_business_account_id

# Restaurante (Información por defecto)
RESTAURANT_NAME=Tu Restaurante
RESTAURANT_PHONE=+54123456789
RESTAURANT_ADDRESS=Tu Dirección
RESTAURANT_CITY=Tu Ciudad
